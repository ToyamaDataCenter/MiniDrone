<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="/socket.io/socket.io.js"></script>
    <script type="text/javascript" src="javascripts/client.js"></script>
  </head>
  <body>
    <div id="allbox">
      <div id="headerbox">
        <h1><%= title %></h1>
        <p>Welcome to <%= title %></p>
      </div>
      <div id="buttonArea">
      <div id="takeoffbox">
        <input type="button" value="離陸(t):takeoff" name="takeoff" id="takeoff" onclick=javascript:fire("t") >
        <input type="button" value="着陸(l):landing" name="landing" id="landing" onclick=javascript:fire("l") >
      </div>
      <div id="centerbox">
      <div id="updownbox">
        <input type="button" value="上昇(u):up" name="up" id="up" onclick=javascript:fire("u") ><br>
        <input type="button" value="下降(d):down" name="down" id="down" onclick=javascript:fire("d") >
      </div>
      <div id="flipbox">
        <input type="button" value="前回転(f):frontFlip" name="frontFlip" id="frontFlip" onclick=javascript:fire("f") ><br>
        <input type="button" value="後回転(b):backFlip" name="backFlip" id="backFlip" onclick=javascript:fire("b") >
      </div>
      </div>
      <div id="releasebox">
        <input type="button" value="接続解除(x)" name="release" id="release" onclick=javascript:fire("x") >
      </div>
      </div>
    </div>
  </body>
</html>
